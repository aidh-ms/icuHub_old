{
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8",
        "editor.formatOnSave": true,
    },
    "python.formatting.provider": "autopep8",
    "python.linting.enabled": true,
    "python.formatting.autopep8Args": [
        "--max-line-length=200"
    ],
    "python.linting.flake8Args": [
        "--max-line-length=200",
        "--ignore=E501"
    ]
}